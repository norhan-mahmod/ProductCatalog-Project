@model ProductViewModel
@{
    ViewData["Title"] = "Details";
}

<h1>Product Details</h1>
<div class="row">
    <div class="col-6">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" readonly>
        </div>
        <div class="form-group">
            <label asp-for="Price"></label>
            <input asp-for="Price" class="form-control" readonly>
        </div>
        <div class="form-group">
            <label asp-for="Duration"></label>
            <input asp-for="Duration" class="form-control" readonly>
        </div>
        <div class="form-group">
            <label asp-for="StartDate"></label>
            <input asp-for="StartDate" class="form-control" readonly>
        </div>
        <div class="form-group">
            <label asp-for="CreationDate"></label>
            <input asp-for="CreationDate" class="form-control" readonly>
        </div>
        <div class="form-group">
            <label>Category Name</label>
            <input type="text" value="@ViewBag.CategoryName" class="form-control" readonly>
        </div>
        <br />
        <a asp-controller="Product" asp-action="Update" asp-route-id="@Model.Id" class="btn btn-success">Update</a>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary">Back To Products</a>
    </div>
</div>
